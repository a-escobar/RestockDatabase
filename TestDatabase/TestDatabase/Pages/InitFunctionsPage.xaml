<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestDatabase.Pages.InitFunctionsPage"
    Title="InitFunctionsPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center"
                 BackgroundColor="AliceBlue"
                 >

    <Label Text="What do you want to do today?"
            FontAttributes="Bold"
            FontSize="Title"
            TextColor= "Black"
            />

    <Button x:Name="BtnNewCalcPg"
            Text="Create New Calculation"
            FontSize="Medium"
            Clicked="BtnNewCalcPg_Clicked"
            />

    <Button x:Name="BtnToUpdatePg"
            Text="Update or Add to Inventory"
            FontSize="Medium"
            Clicked="BtnToUpdatePg_Clicked"
            />

    <Button x:Name="BtnViewPrevCalculation"
            Text="View Previous Calculation"
            FontSize="Medium"
            Clicked="BtnViewPrevCalculation_Clicked"
             />
   


    </StackLayout>

</ContentPage>
