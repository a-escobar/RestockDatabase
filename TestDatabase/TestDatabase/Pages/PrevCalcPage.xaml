<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestDatabase.Pages.PrevCalcPage"
    Title="View Previous Calculation"
    BackgroundColor="AliceBlue">
    <ContentPage.Content>
       
        <Grid Margin="50" RowSpacing="15" ColumnSpacing="15" BackgroundColor="AliceBlue">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Label Text="Last Calculation"
                   BackgroundColor="AliceBlue"
                   FontSize="Title"
                   Grid.Row="0"
                   Grid.Column="0"
                   />

            <Label Text="Last calculation Dates:"
                   FontSize="24"
                   TextColor="DarkSlateBlue"
                   Grid.Row="1"
                  />

            <Label Text="Last calculation Duration (in days)"
                   FontSize="Medium"
                   Grid.Row="2"
                   Grid.Column="0"
                   />
        
        </Grid>

    </ContentPage.Content>
</ContentPage>
